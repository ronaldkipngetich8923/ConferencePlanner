@page
@model Conference.WebClient.Pages.Speakers.CreateSpeakerModel
@{
    ViewData["Title"] = "Add New Speaker";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <form asp-page="CreateUser" method="post">
                    <div class="card ">                     
                        <div class="card-body ">
                           
                            <div class="form-group">
                                <label for="name" class="bmd-label-floating">  Name *</label>
                                <input asp-for="SpeakerRequest.Name" type="text" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <label for="name" class="bmd-label-floating"> Website *</label>
                                <input asp-for="SpeakerRequest.WebSite" type="text" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <label for="name" class="bmd-label-floating"> Bio *</label>
                                <input asp-for="SpeakerRequest.Bio" type="email" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <label for="name" class="bmd-label-floating"> Session *</label>
                                <input asp-for="SpeakerRequest.SessionId" type="tel" class="form-control">
                            </div>
                        </div>
                        <div class="card-footer text-right">
                            <div class="ml-auto">
                                <button type="submit" class="btn btn-rose">Create</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>